@model Ingredient

@{
    ViewBag.Title = $"Edytuj {Model.Nazwa} Składniki";
}

<h3>Edit Ingredient</h3>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="IngredientId" />
    <div class="form-group">
        <label asp-for="Nazwa"></label>
        <input asp-for="Nazwa" class="form-control" />
        <span asp-validation-for="Nazwa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-default">Wróć do listy</a>
    </div>
</form>
